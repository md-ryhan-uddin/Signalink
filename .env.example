# ====================================
# Signalink Environment Configuration
# ====================================

# Application
APP_NAME=Signalink
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration
POSTGRES_USER=signalink
POSTGRES_PASSWORD=signalink123
POSTGRES_DB=signalink
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# Kafka Configuration (Phase 3)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_MESSAGES=signalink-messages
KAFKA_TOPIC_NOTIFICATIONS=signalink-notifications
KAFKA_TOPIC_ANALYTICS=signalink-analytics
KAFKA_CONSUMER_GROUP=signalink-consumers

# WebSocket Configuration (Phase 2)
WS_HOST=0.0.0.0
WS_PORT=8001
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# AWS Configuration (Phase 6)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin
